---
// @ts-nocheck
import { getSession } from 'auth-astro/server';
import { query } from '../lib/db.js';

const session = await getSession(Astro.request);
let hasActiveSubscription = false;
let subscriptionInfo = null;

if (session?.user?.email) {
  const users = await query(
    'SELECT id FROM users WHERE email = ? LIMIT 1',
    [session.user.email]
  );

  if (users.length > 0) {
    const userId = users[0].id;
    
    const subscriptions = await query(`
      SELECT 
        status,
        current_period_end,
        stripe_subscription_id
      FROM payments 
      WHERE user_id = ? 
        AND type = 'subscription'
        AND status = 'active'
        AND current_period_end > NOW()
      ORDER BY current_period_end DESC
      LIMIT 1
    `, [userId]);

    if (subscriptions.length > 0) {
      hasActiveSubscription = true;
      subscriptionInfo = subscriptions[0];
    }
  }
}
---

{hasActiveSubscription && subscriptionInfo && (
  <div class="bg-green-50 border border-green-200 rounded-lg p-3 mb-4">
    <div class="flex items-center">
      <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
      </svg>
      <div class="flex-1">
        <p class="text-sm font-medium text-green-800">
          Suscripción Activa
        </p>
        <p class="text-xs text-green-600">
          Válida hasta: {new Date(subscriptionInfo.current_period_end).toLocaleDateString('es-ES')}
        </p>
      </div>
      <a 
        href="/cuenta"
        class="text-xs text-green-700 hover:text-green-800 font-medium"
      >
        Gestionar
      </a>
    </div>
  </div>
)}

{!hasActiveSubscription && session?.user && (
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-3 mb-4">
    <div class="flex items-center">
      <svg class="w-5 h-5 text-blue-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
      </svg>
      <div class="flex-1">
        <p class="text-sm font-medium text-blue-800">
          Sin Suscripción Activa
        </p>
        <p class="text-xs text-blue-600">
          Suscríbete para acceso ilimitado
        </p>
      </div>
      <a 
        href="/precios"
        class="text-xs text-blue-700 hover:text-blue-800 font-medium"
      >
        Ver Planes
      </a>
    </div>
  </div>
)}
