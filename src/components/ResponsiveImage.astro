---
// @ts-nocheck
// Thin wrapper around Astro's image integration for responsive images
import { Image } from 'astro:assets';
const {
  src, alt = '', widths = [64, 96, 128, 192, 256], sizes = '(max-width: 640px) 96px, 128px', 
  format = 'webp', class: className = '', loading = 'lazy', decoding = 'async', fetchpriority = 'low', 
  width, height
} = Astro.props;

// Optimizar formato basado en soporte del navegador
const optimizedFormat = format === 'webp' ? ['avif', 'webp'] : [format, 'webp'];
---
<Image 
  src={src}
  alt={alt}
  widths={widths}
  sizes={sizes}
  format={optimizedFormat}
  class={className}
  loading={loading}
  decoding={decoding}
  fetchpriority={fetchpriority}
  width={width}
  height={height}
/>


